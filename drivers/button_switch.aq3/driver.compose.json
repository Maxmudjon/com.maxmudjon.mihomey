{
  "name": {
    "en": "Aqara Wireless Switch Button (advanced)"
  },
  "class": "sensor",
  "capabilities": [
    "measure_battery",
    "alarm_battery"
  ],
  "energy": {
    "batteries": [
      "CR2032"
    ]
  },
  "images": {
    "large": "/drivers/button_switch.aq3/assets/images/large.png",
    "small": "/drivers/button_switch.aq3/assets/images/small.png"
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Device information"
      },
      "children": [
        {
          "id": "deviceSid",
          "type": "label",
          "label": {
            "en": "Device sid"
          },
          "value": "0123456789abcd"
        },
        {
          "id": "deviceFromGatewaySid",
          "type": "label",
          "label": {
            "en": "Gateway sid"
          },
          "value": "0123456789ab"
        },
        {
          "id": "deviceModelName",
          "type": "label",
          "label": {
            "en": "Device model"
          },
          "value": "lumi.device"
        },
        {
          "id": "deviceModelCodeName",
          "type": "label",
          "label": {
            "en": "Device model code"
          },
          "value": "AABBCC01LM"
        }
      ]
    }
  ],
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      },
      "options": {
        "singular": false
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ]
}